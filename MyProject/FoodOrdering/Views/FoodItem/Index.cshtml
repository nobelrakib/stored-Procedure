<div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4" data-role="recipe" >
            <div class="card">
                <img src="~/images/1.jpg" width="100%" alt=" " class="img-responsive" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    
                    @{
                        var parms = new Dictionary<string, string>
                                                        {
                       
                       { "fooditemid", @item.Id.ToString()}
                };
                    }

                    <a asp-route="addorder"
                       asp-all-route-data="parms">add order</a>
                </div>
            </div>
            </div>

        }
    </div>

@section scripts
{

    <script>
        $(document).ready(function () {
            $("#searchbox").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $('div[data-role="recipe"]').filter(function () {
                    $(this).toggle($(this).find('h5').text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

}



